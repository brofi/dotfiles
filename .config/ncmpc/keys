## Key bindings for ncmpc (generated by ncmpc)

## Key configuration screen
key screen-keyedit = Ctrl-K

## Quit
key quit = 'q',  Ctrl-C

## Move cursor up
key up = 'k'

## Move cursor down
key down = 'j'

## Move cursor to the top of screen
key top = 'H'

## Move cursor to the middle of screen
key middle = 'M'

## Move cursor to the bottom of screen
key bottom = 'L'

## Move cursor to the top of the list
key home = 'g'

## Move cursor to the bottom of the list
key end = 'G'

## Page up
key pgup = Ctrl-B,  339

## Page down
key pgdn = Ctrl-F,  338

## Range selection
key range-select = 'v',  'V'

## Scroll down one line
key scroll-down-line = Ctrl-E

## Scroll up one line
key scroll-up-line = Ctrl-Y

## Scroll up half a screen
key scroll-down-half = Ctrl-D

## Scroll down half a screen
key scroll-up-half = Ctrl-U

## Select currently playing song
key select-playing = 96

## Help screen
key screen-help = '1',  F1

## Queue screen
key screen-playlist = '2',  F2

## Browse screen
key screen-browse = '3',  F3

## Play/Enter directory
key play = 'o',  Ctrl-M

## Pause
key pause = 32

## Stop
key stop = 263

## Crop
key crop = 0

## Next track
key next = 62,  36

## Previous track
key prev = 60,  94

## Seek forward
key seek-forward = 'l',  261

## Seek backward
key seek-backward = 'h',  260

## Increase volume
key volume-up = 43,  259

## Decrease volume
key volume-down = 45,  258

## Select/deselect song in queue
key select = 'a'

## Select all listed items
key select_all = Ctrl-A

## Delete song from queue
key delete = 'd',  330

## Shuffle queue
key shuffle = 126

## Clear queue
key clear = 'C'

## Toggle repeat mode
key repeat = 'r'

## Toggle random mode
key random = 'z'

## Toggle single mode
key single = 0

## Toggle consume mode
key consume = 'c'

## Toggle crossfade mode
key crossfade = 'x'

## Start a music database update
key db-update = Ctrl-\

## Save queue
key save = 'W'

## Append song to queue
key add = 0

## Go to root directory
key go-root-directory = 33

## Go to parent directory
key go-parent-directory = 46

## Locate song in browser
key locate = 'f'

## Move item up
key move-up = 'K'

## Move item down
key move-down = 'J'

## Refresh screen
key update = Ctrl-L

## Toggle find mode
key wrap-mode = Ctrl-_

## Toggle auto center mode
key autocenter-mode = 0

## Next screen
key screen-next = Ctrl-I

## Previous screen
key screen-prev = 353

## Swap to most recent screen
key screen-swap = 0

## Forward find
key find = 47

## Forward find next
key find-next = 'n'

## Backward find
key rfind = 63

## Backward find previous
key rfind-next = 'p'

## Jump to
key jump = 0

## Library page
key library-page = '4',  F4

## Search screen
key screen-search = '5',  F5

## Change search mode
key search-mode = 'm'

