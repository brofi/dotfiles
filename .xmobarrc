Config { font = "xft:Inconsolata:size=12:antialias=true" 
       , bgColor = "#383838"
       , fgColor = "white"
       , border = NoBorder
       , borderColor = "#2a2a2a"
       , position = Top
       , commands = [ Run Weather "EDSB" ["-t","<station>: <tempC>C","-L","18","-H","25","--normal","#ccff00","--high","#ff00a0","--low","#48c6ff"] 36000
                    , Run Network "enp5s0" ["-S","True","-t","<dev>: <rx>","-L","0","-H","70","--normal","#ccff00","--high","#ff00a0"] 1
                    , Run Cpu ["-t","Cpu: <total>%","-L","3","-H","50","--normal","#ccff00","--high","#ff00a0"] 5
                    , Run Memory ["-t","Mem: <usedratio>%"] 5
                    , Run Date "%a %b %_d %l:%M" "date" 10
                    , Run Uptime ["-t","Up: <hours>h <minutes>m"] 10
                    , Run Com "bin/volume.sh" [] "volume" 1
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %StdinReader%}{%cpu%  %memory%  %enp5s0% ~ %uptime%  <fc=#ccff00>%date%</fc>  %EDSB% ~ Vol: <fc=#ccff00>%volume%</fc> "
       }
